<div class='field'>
  <%= f.label t('.menu_title') -%>
  <%= f.text_field :menu_title, :class => 'widest' -%>
</div>
<br/>
<div id="aboutus-tabs">
  <ul>
    <li><a href="#aboutus-left-col">Left column</a></li>
    <li><a href="#aboutus-right-col">Right column</a></li>
  </ul>
  <div id="aboutus-left-col">
    <%= f.text_area :left_col, :rows => 20, :class => 'wymeditor saisie' -%>
  </div>
  <div id="aboutus-right-col">
    <%= f.text_area :right_col, :rows => 20, :class => 'wymeditor saisie' -%>
  </div>
</div>

<div class='field'>
  <%= f.label t('.latitude') -%>
  <%= f.number_field :latitude,
                     :in => -90..90,
                     :placeholder => "XX.XXXX",
                     :step => 0.0001 -%>
</div>

<div class='field'>
  <%= f.label t('.longitude') -%>
  <%= f.number_field :longitude,
                     :in => -180..180,
                     :placeholder => "xxx.xxxx",
                     :step => 0.0001  -%>
</div>

<div class='field'>
  <%= f.label t('.seo_title') -%>
  <%= f.text_field :seo_title, :class => 'widest' -%>
</div>

<div class='field'>
  <%= f.label t('.seo_keywords') -%>
  <%= f.text_field :seo_keywords, :class => 'widest' -%>
</div>

<div class='field'>
  <%= f.label t('.seo_description') -%>
  <%= f.text_area :seo_description, :class => 'widest', :rows => 7 %>
</div>

<% content_for :javascripts do %>
  <script>
	  $(document).ready(function(){
		  $('#aboutus-tabs').tabs();
	  });
  </script>
<% end %>

