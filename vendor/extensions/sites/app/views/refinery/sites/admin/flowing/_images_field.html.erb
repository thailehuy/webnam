<div class='wym_box field images_field'>
  <ul class='page_flowing_images' class='clearfix'>
    <%= f.fields_for :flowing_images do |image_form| %>
      <li id='flowing-image_<%= image_form.object.id %>'>
        <%= image_form.hidden_field :id %>
        <%= image_fu image_form.object, '135x135#c' %>
        <% index = image_form.object_name.split('[').last.split(']').first.to_i %>
        <%= hidden_field_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{index}][carousel_image_id]",
                             f.object.carousel_image_id_for_image_index(index) %>
        <% if true # yes we want captions %>
          <div class='textarea_wrapper_for_wym'>
            <%= text_area_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{index}][caption]",
                              f.object.caption_for_flowing_image_index(index),
                              :style => 'display: none',
                              :id => "page_flowing_captions_#{index}",
                              :class => 'page_caption' %>
          </div>
        <% end %>
        <% if true # yes we want weblinks %>
          <div class='dialog'>
            <%= text_field_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{index}][weblink]",
                              f.object.weblink_for_flowing_image_index(index),
                              :style => 'display: none',
                              :id => "page_flowing_weblinks_#{index}",
                              :class => 'page_weblink' %>
          </div>
        <% end %>
      </li>
    <% end %>
    <li class='flowing empty'>
      <%= hidden_field_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{f.object.flowing_images.size}][id]" %>
      <% if true # yes we want captions %>
        <div class='textarea_wrapper_for_wym'>
          <%= text_area_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{f.object.flowing_images.size}][caption]",
                            '',
                            :style => 'display: none',
                            :id => "page_flowing_captions_#{f.object.flowing_images.size}",
                            :class => 'page_caption' %>
        </div>
      <% end %>
      <% if true # yes we want weblinks %>
        <div class='dialog'>
          <%= text_field_tag "#{f.object_name.demodulize}[flowing_images_attributes][#{f.object.flowing_images.size}][weblink]",
                            '',
                            :style => 'display: none',
                            :id => "page_flowing_weblinks_#{f.object.flowing_images.size}",
                            :class => 'page_weblink' %>
        </div>
      <% end %>
    </li>
  </ul>
</div>