
<%= form_for [refinery, :sites_admin, @google_calendar] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @google_calendar,
              :include_object_name => true %>


  <%= f.hidden_field :site_id -%>
  

  <div class='field'>
    <%= f.label :account -%>
    <%= f.email_field :account  -%>
  </div>
  
  <%= render 'google_color_picker', :f => f %>


  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => true,
             :delete_title => t('delete', :scope => 'refinery.google_calendars.admin.google_calendars.google_calendar'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @google_calendar.account) %>
<% end -%>

