<ul>
  <% if ::Refinery::Sites::Admin::OrdersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sites_admin_orders_path %>
    </li>
  <% end %>
<% if !searching? && ::Refinery::Sites::Admin::OrdersController.sortable? && Refinery::Sites::Order.any? %>
  <li>
    <%= link_to t('reorder', :what => "Orders"),
                 refinery.sites_admin_orders_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('reorder_done', :what => "Orders"),
                 refinery.sites_admin_orders_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
