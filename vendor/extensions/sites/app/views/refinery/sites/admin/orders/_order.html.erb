<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order) -%>">
  <span class='title'>
    <%= order.title %>
    <% if order.delivered? %>
      <%= t('delivered') %>
    <% end %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_sites_admin_order_path(order),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.sites_admin_order_path(order),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => order.title),
        :method => :delete %>
  </span>
</li>
