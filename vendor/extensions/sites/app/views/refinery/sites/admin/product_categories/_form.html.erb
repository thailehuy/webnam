<%= form_for [refinery, :sites_admin, @product_category] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product_category,
              :include_object_name => true %>

  <%= render "/refinery/sites/admin/sites/locale_picker",
             :current_locale => Thread.current[:globalize_locale] if Refinery.i18n_enabled? %>

  <%= f.hidden_field :site_id -%>

  <div class='field'>
    <%= f.label t('.name') -%>
    <%= f.text_field :name  -%>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => true,
             :delete_title => t('delete', :scope => 'refinery.sites.admin.product_categories.product_category'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product_category.name) %>
<% end -%>

