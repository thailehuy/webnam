<div class='wym_box field images_field'>
  <ul class='page_slide_images' class='clearfix'>
    <%= f.fields_for :"#{custom}_slide_images" do |image_form| %>
      <li class='slide-image_<%= image_form.object.id %>'>
        <%= image_form.hidden_field :id %>
        <%= image_fu image_form.object, '135x135#c' %>
        <% index = image_form.object_name.split('[').last.split(']').first.to_i %>
        <%= hidden_field_tag "#{f.object_name.demodulize}[#{custom}_slide_images_attributes][#{index}][home_image_id]",
                             f.object.send("#{custom}_image_id_for_image_index", index) %>
        <% if true # yes we want captions %>
          <div class='textarea_wrapper_for_wym'>
            <%= text_area_tag "#{f.object_name.demodulize}[#{custom}_slide_images_attributes][#{index}][caption]",
                              f.object.send("caption_for_#{custom}_slide_image_index", index),
                              :style => 'display: none',
                              :id => "page_#{custom}_slide_captions_#{index}",
                              :class => 'page_caption' %>
          </div>
        <% end %>
      </li>
    <% end %>
    <li class='slide empty'>
      <%= hidden_field_tag "#{f.object_name.demodulize}[#{custom}_slide_images_attributes][#{f.object.slide_images.size}][id]" %>
      <% if true # yes we want captions %>
        <div class='textarea_wrapper_for_wym'>
          <%= text_area_tag "#{f.object_name.demodulize}[#{custom}_slide_images_attributes][#{f.object.slide_images.size}][caption]",
                            '',
                            :style => 'display: none',
                            :id => "page_#{custom}_slide_captions_#{f.object.slide_images.size}",
                            :class => 'page_caption' %>
        </div>
      <% end %>
    </li>
  </ul>
</div>