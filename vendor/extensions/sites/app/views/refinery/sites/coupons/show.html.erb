<% content_for :body_content_title do %>
  <%= @coupon.title %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1><%= t('.site') %></h1>
    <p>

      <%=raw @coupon.site_id %>

    </p>
  </section>

  <section>
    <h1><%= t('.displayed') %></h1>
    <p>

      <%=raw @coupon.displayed %>

    </p>
  </section>

  <section>
    <h1><%= t('.decoration') %></h1>
    <p>

      <%=raw @coupon.decoration %>

    </p>
  </section>

  <section>
    <h1><%= t('.title') %></h1>
    <p>

      <%=raw @coupon.title %>

    </p>
  </section>

  <section>
    <h1><%= t('.description') %></h1>
    <p>

      <%=raw @coupon.description %>

    </p>
  </section>

  <section>
    <h1><%= t('.expiry') %></h1>
    <p>

      <%=raw @coupon.expiry %>

    </p>
  </section>

  <section>
    <h1><%= t('.max_number') %></h1>
    <p>

      <%=raw @coupon.max_number %>

    </p>
  </section>

  <section>
    <h1><%= t('.seed_number') %></h1>
    <p>

      <%=raw @coupon.seed_number %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="coupons">
      <% @coupons.each do |coupon| %>
        <li>
          <%= link_to coupon.title, refinery.sites_coupon_path(coupon) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
