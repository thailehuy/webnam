<% content_for :body_content_title do %>
  <%= @event.event_title %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1><%= t('.site') %></h1>
    <p>

      <%=raw @event.site_id %>

    </p>
  </section>

  <section>
    <h1><%= t('.published') %></h1>
    <p>

      <%=raw @event.published %>

    </p>
  </section>

  <section>
    <h1><%= t('.event_title') %></h1>
    <p>

      <%=raw @event.event_title %>

    </p>
  </section>

  <section>
    <h1><%= t('.event_summary') %></h1>
    <p>

      <%=raw @event.event_summary %>

    </p>
  </section>

  <section>
    <h1><%= t('.event_date') %></h1>
    <p>

      <%=raw @event.event_date %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.event_title, refinery.sites_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
