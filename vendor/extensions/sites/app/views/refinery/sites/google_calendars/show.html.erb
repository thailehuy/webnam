<% content_for :body_content_title do %>
  <%= @google_calendar.account %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1><%= t('.site') %></h1>
    <p>

      <%=raw @google_calendar.site_id %>

    </p>
  </section>

  <section>
    <h1><%= t('.account') %></h1>
    <p>

      <%=raw @google_calendar.account %>

    </p>
  </section>

  <section>
    <h1><%= t('.bg_color') %></h1>
    <p>

      <%=raw @google_calendar.bg_color %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="google_calendars">
      <% @google_calendars.each do |google_calendar| %>
        <li>
          <%= link_to google_calendar.account, refinery.sites_google_calendar_path(google_calendar) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
