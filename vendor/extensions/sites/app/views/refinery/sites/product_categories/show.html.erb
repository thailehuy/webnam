<% content_for :body_content_title do %>
  <%= @product_category.name %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1><%= t('.site') %></h1>
    <p>

      <%=raw @product_category.site_id %>

    </p>
  </section>

  <section>
    <h1><%= t('.name') %></h1>
    <p>

      <%=raw @product_category.name %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="product_categories">
      <% @product_categories.each do |product_category| %>
        <li>
          <%= link_to product_category.name, refinery.sites_product_category_path(product_category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
