<% content_for :body_content_title do %>
  <%= @product.name %>
<% end %>

<% content_for :body_content_left do %>

  <section>
    <h1><%= t('.name') %></h1>
    <p>

      <%=raw @product.name %>

    </p>
  </section>

  <section>
    <h1><%= t('.description') %></h1>
    <p>

      <%=raw @product.description %>

    </p>
  </section>

  <section>
    <h1><%= t('.picture') %></h1>
    <p>

      <%= image_fu @product.picture, nil %>

    </p>
  </section>

  <section>
    <h1><%= t('.product_category') %></h1>
    <p>

      <%=raw @product.product_category_id %>

    </p>
  </section>

  <section>
    <h1><%= t('gender') %></h1>
    <p>

      <%=raw @product.gender %>

    </p>
  </section>

  <section>
    <h1><%= t('.site') %></h1>
    <p>

      <%=raw @product.site_id %>

    </p>
  </section>

<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="products">
      <% @products.each do |product| %>
        <li>
          <%= link_to product.name, refinery.sites_product_path(product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
